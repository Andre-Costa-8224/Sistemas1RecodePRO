@model MeuTeste.Models.Cliente

@{
    ViewData["Title"] = "Deletar";
}

<h1 style="text-align: center;">Deletar</h1>

<main class="prin">
    <h3>Você tem certeza que deseja deletar?</h3>
    <section class="art">
        <div>
            <h4>Cliente</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.data_nasc)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.data_nasc)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.cpf)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.cpf)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.telefone)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.telefone)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="ID_Cliente" />
                <input type="submit" value="Deletar" class="btn btn-danger" /> |
                <a asp-action="Index">Voltar para lista</a>
            </form>
        </div>
    </section>
</main>


